@model IEnumerable<CGCWRegistration.Models.ViewModels.UsersViewModel>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Chinese Name</th>
            <th>Sex</th>
            <th>Occupation</th>
            <th>Age Range</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>Introduced By</th>
            <th>Existing Member</th>
            <th>Languages</th>
            @foreach (var question in Model.First().Responses)
            {
                <th>@question.Question</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.ChineseName</td>
                <td>@user.Sex</td>
                <td>@user.Occupation</td>
                <td>@user.AgeRange</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
                <td>@user.IntroducedBy</td>
                <td>@user.ExistingMember</td>
                <td>@string.Join(", ", user.Languages)</td>
                @foreach (var response in user.Responses)
                {
                    <td>@response.Response</td>
                }
            </tr>
        }
    </tbody>
</table>
